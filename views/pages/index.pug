extends ../main.layout.pug

block variables
  - var title = 'Главная страница'

block content
  section.section.hero
    .hero__links-hamburger
      .hero__links
        - 
          var socials = [
            ['vk', 'http://vk.com/id15292604'],
            ['tw', 'https://github.com/aspershin'],
            ['in', 'in.com'],
          ]
        ul.socials
          each item in socials
            li.socials.item
            - console.log(item)
              a(href=`${item[1]}` target="_blank").socials__link #{item[0]}
      a(href="#").hero__menu
        ul.hamburger
          li.hamburger__item
          li.hamburger__item
          li.hamburger__item
