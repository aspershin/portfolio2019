extends ../main.layout.pug

block variables
  - var title = 'Главная страница'

block content
  section.section.hero
    .hero__links
      - 
        var socials = [
          ['vk', 'vk.com'],
          ['tw', 'twitter.com'],
          ['in', 'in.com'],
        ]
      ul.socials
        each item in socials
          li.socials.item
          - console.log(item)
            a(href=`${item[1]}`).socials__link #{item[0]}
    .hero__menu.hamburger
    .hero__title  
      .section-title
        img.section-title__img
      .user.hero__user
        .user__pic
          img.user__avatar
        .user__description
          .user__name Имя Имя
          .user__desc Личный сайт
    .arrow-down.hero__scroll-button
